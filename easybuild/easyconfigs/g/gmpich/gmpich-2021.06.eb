easyblock = "Toolchain"

name = 'gmpich'
version = '2021.06'

homepage = '(none)'
description = """gcc and GFortran based compiler toolchain,
 including MPICH for MPI support."""

toolchain = SYSTEM

local_comp = ('GCC', '10.2.0')

# compiler toolchain dependencies
dependencies = [
    local_comp,
    ('MPICH', '3.3.2', '', local_comp),
]

moduleclass = 'toolchain'
